{# /templates/offre/liste.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <title>Offres sur Bordeaux</title>
        <style>
            .main-content {
                margin: auto;
                width: 1000px;
            }
            .header-offre {
                margin: 0;
            }
            .intitule {
                float:left;
                width: 50%;
            }
            .localisation {
                float: right;
                width: 50%;
                text-align: right;
            }
            .header-offre::after {
                content: "";
                clear: both;
                display: table;
            }
            .une_offre {
                background: #cacaca;
                border-radius: 10px;
                padding: 10px;
                margin-bottom: 10px;
            }
            .entreprise {
                text-decoration: underline;
            }
        </style>
    </head>
    <body>
        <div class="main-content">

            <h1>{{offres|length}} offres trouv√©es sur Bordeaux</h1>
        
            {% for offre in offres %}
            <div class="une_offre">
                <h2 class="header-offre">
                    <span class="intitule">
                        {{ offre.intitule }}<br/>
                        <span class="entreprise">{{ offre.entreprise.nom|default("")}}</span>
                    </span>
                    <span class="localisation">
                        {{ offre.lieuTravail.libelle}}
                    </span>
                </h2>
                <h4>
                    {{ offre.typeContratLibelle}} ({{offre.typeContrat}})
                </h4>
                <p class="description">
                     {{ offre.description }}
                </p>
            </div>
            {% endfor %}
        </div>
    </body>
</html>
